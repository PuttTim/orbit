{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "Node 18",

	"compilerOptions": {
		"lib": ["es2022", "DOM"],
		"module": "ES2022",
		"target": "es2022",
		"strict": false,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node"
	},
	"ts-node": {
		"esm": true
	}
}
